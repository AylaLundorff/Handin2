<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.ayla.handin1mobi1.SendEmailActivity"
    android:orientation="vertical"
    android:background="@drawable/landscape_background_bm_cropped">


<TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/emailbar"
        android:text="@string/composeEmail"
        android:textSize="18sp"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:gravity="center"
        android:padding="20dp"
        />
    <Button
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:layout_below="@id/emailbar"
        android:id="@+id/t10"
        android:text="@string/button_composeEmail"
        android:textSize="18sp"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:gravity="center"
        android:padding="7dp"
        android:background="@drawable/buttonshape"/>

</RelativeLayout>